<Page x:Class="Tierpension.StartScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="StartScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Bitte geben Sie Ihren Namen ein:" Margin="0,0,0,10"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Height="30" Margin="0,0,0,10"/>
            <Button Content="OK" Width="100" Height="30" Click="OKButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
