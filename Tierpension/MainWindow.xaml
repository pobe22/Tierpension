<Window x:Class="Tierpension.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tierpension Startbildschirm" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Grid.Column="1" Margin="10" Content="Tiere abgeben" Click="TiereAbgeben_Click" Height="25" Width="100"/>
        <Button Grid.Row="1" Grid.Column="2" Margin="10"  Content="Tiere abholen" Click="TiereAbholen_Click" Height="25" Width="100" />
        <Frame Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
