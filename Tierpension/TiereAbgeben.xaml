<Page x:Class="Tierpension.TiereAbgeben"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Tierpension" Height="500" Width="500"
      Background="Beige">
    
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Kundendaten:" Margin="0,0,0,10"/>
            <TextBox Name="KundennameTextBox"       Text="Kundenname"             Margin="0,0,0,10" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox Name="AdresseTextBox"          Text="Adresse"          Margin="0,0,0,10" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
            <TextBox Name="TelefonnummerTextBox"    Text="Telefonnummer"    Margin="0,0,0,10" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

            <TextBlock Text="Wählen Sie ein Tier:" Margin="0,10,0,10"/>
            <ComboBox Name="TierComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Hund" />
                <ComboBoxItem Content="Katze" />
                <ComboBoxItem Content="Wellensittich" />
            </ComboBox>

            <TextBlock Text="Anzahl der Tage:" Margin="0,10,0,10"/>
            <TextBox Name="TageTextBox" Margin="0,0,0,10"/>

            <Button Content="Preis berechnen" Click="BerechnePreis_Click" Margin="0,10,0,10"/>
            <TextBlock Name="ErgebnisTextBlock" Margin="20,20,0,0"/>
            <Button Name="BuchungAbschliessenButton" Content="Buchung abschließen" Click="BuchungAbschliessen_Click" Margin="0,10,0,10" Visibility="Collapsed"/>
            <Button Content="Zurück zu Home" Click="ZurueckZumHome_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
